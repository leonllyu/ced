<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
  xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

  <persistence-unit name="GeekSeek">
    <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>

    <!-- Figure out dynamic scan of multiple modules -->
    <class>org.cedj.geekseek.domain.conference.model.Conference</class>
    <class>org.cedj.geekseek.domain.conference.model.Session</class>
    <class>org.cedj.geekseek.domain.user.model.User</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>

    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update" />
    </properties>
  </persistence-unit>

</persistence>